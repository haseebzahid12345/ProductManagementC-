@model ProductManager.ViewModels.ProductViewModel

<h2>Edit Product</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="ProductID" /> <!-- To track the product ID -->

    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Tags"></label>
        <input asp-for="Tags" class="form-control" />
    </div>

    <div class="form-group">
        <label>Categories</label>
        <div>
            @foreach (var category in ViewBag.AllCategories)
            {
                <div class="form-check">
                    <input type="radio"
                           class="form-check-input"
                           id="category_@category.CategoryID"
                           name="Categories"
                           value="@category.CategoryName"
                    @(Model.Categories.Contains(category.CategoryName) ? "checked" : "") />
                    <label class="form-check-label" for="category_@category.CategoryID">
                        @category.CategoryName
                    </label>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
